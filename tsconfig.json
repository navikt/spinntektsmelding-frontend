{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["vitest/globals"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "state/mappe",
    "__mocks__/server.js",
    "__mocks__/handlers.js",
    "./__tests__/setup.ts",
    "vitest.config.mts"
  ],
  "exclude": ["node_modules"],
  "types": ["node", "vitest/globals", "vitest/jsdom"]
}
